{
    "name": "js-strack",
    "version": "1.0.0",
    "description": "Step by step following \"js-stack-from-scratch\"",
    "main": "app.js",
    "repository": "https://github.com/EugeneZeng/js-strack.git",
    "author": "Eugene.Zeng <eugene.zeng@gwtsz.net>",
    "license": "MIT",
    "scripts": {
        "start": "gulp"
    },
    "babel": {
        "presets": [
            "latest"
        ]
    },
    "eslintConfig": {
        "extends": "airbnb",
        "rules": {
            "comma-dangle": ["error", "always"],
            "indent": ["error", 4],
            "no-cond-assign": ["error", "always"],
            "linebreak-style": "off",
            "one-var": "off", 
            "init-declarations": "off",
            "no-console": "off",
            "no-trailing-spaces": "off",
            "no-inline-comments": "off"
        },
        "plugins": ["import"]
    },
    "dependencies": {
        "babel": "^6.5.2",
        "gulp": "^3.9.1"
    },
    "devDependencies": {
        "babel-preset-latest": "^6.16.0",
        "del": "^2.2.2",
        "eslint": "^3.11.1",
        "eslint-config-airbnb": "^13.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "2.2.3",
        "eslint-plugin-react": "^6.7.1",
        "gulp-babel": "^6.1.2",
        "gulp-eslint": "^3.0.1"
    }
}
